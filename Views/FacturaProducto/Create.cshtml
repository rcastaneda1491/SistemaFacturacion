@model SistemaFacturacion.Models.FacturaProducto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Detalle Factura</h1>

<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="numeroFactura" value="@TempData["numeroFactura"]" />
            <div class="form-group">
                <label asp-for="codigoProducto" class="control-label"></label>
                <select asp-for="codigoProducto" class="form-control" asp-items="ViewBag.codigoProducto"></select>
                <span asp-validation-for="codigoProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cantidad" class="control-label"></label>
                <input asp-for="cantidad" class="form-control" />
                <span asp-validation-for="cantidad" class="text-danger"></span>
                @if (ViewBag.Message != null)
                {
                    <span class="text-danger">@ViewBag.Message</span>
                }
            </div>
            <div class="form-group">
                <input type="submit" asp-route-id="@TempData["numeroFactura"]" value="Guardar" class="btn btn-primary" /> |
                <a asp-action="Index" asp-route-id="@TempData["numeroFactura"]">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>
