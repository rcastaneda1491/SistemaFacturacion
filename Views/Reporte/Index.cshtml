
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="./css/reportesVista.css">

<h1>Reportes</h1>
<br />
<hr />

<div class="card">
    <div class="card-header">
        Reportes
    </div>
    <div class="card-body">
        <h5 class="card-title">Ventas por Producto: Búsqueda por Nombre</h5>
        <p class="card-text">Mostrar el monto total vendido de cada producto por el nombre seleccionado (día por día)</p>
        @Html.ActionLink("Ver Reporte", "ReporteVentasProductosNombre", new { codigoProducto = 0 }, new { @class = "btn btn-primary" })
    </div>
</div>
